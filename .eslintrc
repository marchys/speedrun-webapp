{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "generators": true
    }
  },
  "rules": {
    "linebreak-style": 0,
    "no-void": 0,
    "arrow-parens": [2, "as-needed"],
    "import/prefer-default-export": 1,
    "import/no-extraneous-dependencies": 1,
    "import/no-named-as-default": 1,
    "react/prefer-stateless-function": 1
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  }
}
